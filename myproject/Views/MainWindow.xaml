<Window x:Class="MyProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphene Trace â€“ Login" Height="360" Width="520" Background="{StaticResource SurfaceBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header with logo and brand text -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Card}" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Width="36" Height="36"
                       Margin="2,0,0,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       Stretch="Uniform"
                       Source="pack://application:,,,/Assets/graphene-trace-logo.png"/>
                <TextBlock Style="{StaticResource H1}" Margin="10,0,0,0" Text="Graphene Trace"/>
            </StackPanel>
        </Border>

        <!-- Username -->
        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelText}" Text="Username" VerticalAlignment="Center"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" Margin="6,4"/>

        <!-- Password -->
        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}" Text="Password" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="6,4"/>

        <!-- Role -->
        <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelText}" Text="Role" VerticalAlignment="Center"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="3" Grid.Column="1" Margin="6,4" Width="240">
            <ComboBoxItem Content="Patient" IsSelected="True"/>
            <ComboBoxItem Content="Clinician"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LoginButton" Content="Login" Width="110" Margin="6"/>
            <Button x:Name="RegisterButton" Content="Register" Width="100" Margin="6" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>

        <!-- Pending approval banner -->
        <TextBlock x:Name="PendingBanner" Grid.Row="5" Grid.ColumnSpan="2"
                   Text="Pending Admin Approval. Please wait for an administrator to approve your account."
                   Visibility="Collapsed"
                   Background="LightGoldenrodYellow"
                   Foreground="DarkGoldenrod"
                   Padding="6"
                   TextWrapping="Wrap"/>
    </Grid>
</Window>