<Window x:Class="MyProject.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphene Trace â€“ Register" Height="520" Width="760" Background="{StaticResource SurfaceBrush}">
    <!-- Outer container keeps content centered and limits max width -->
    <Grid Margin="24" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with logo and brand text -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,16" MaxWidth="720" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Width="36" Height="36"
                       Margin="2,0,0,0"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       Stretch="Uniform"
                       Source="pack://application:,,,/Assets/graphene-trace-logo.png"/>
                <TextBlock Style="{StaticResource H1}" Margin="10,0,0,0" Text="Graphene Trace"/>
            </StackPanel>
        </Border>

        <!-- Form area as a two-column grid -->
        <Grid Grid.Row="1" MaxWidth="720" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Username -->
            <TextBlock Style="{StaticResource LabelText}" Text="Username" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameInput" Grid.Column="1" Margin="6,4"/>

            <!-- Password -->
            <TextBlock Style="{StaticResource LabelText}" Text="Password" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="6,4" Orientation="Vertical">
                <PasswordBox x:Name="PasswordInput" Margin="0,0,0,4"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock x:Name="StrengthLabel" Text="Password strength: " Foreground="Gray"/>
                    <ProgressBar x:Name="StrengthBar" Height="8" Minimum="0" Maximum="100" Value="0"/>
                </StackPanel>
            </StackPanel>

            <!-- Confirm Password -->
            <TextBlock Style="{StaticResource LabelText}" Text="Confirm Password" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <PasswordBox x:Name="ConfirmPasswordInput" Grid.Row="2" Grid.Column="1" Margin="6,4"/>

            <!-- Role -->
            <TextBlock Style="{StaticResource LabelText}" Text="Role" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="RoleCombo" Grid.Row="3" Grid.Column="1" Margin="6,4" Width="240">
                <ComboBoxItem Content="Patient" IsSelected="True"/>
                <ComboBoxItem Content="Clinician"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>
        </Grid>

        <!-- Role hint / validation messages -->
        <TextBlock x:Name="RoleWarning" Grid.Row="2" Foreground="DarkOrange" Visibility="Collapsed" HorizontalAlignment="Center" MaxWidth="720" Text="Admin approval required for Clinician/Admin."/>
        <TextBlock x:Name="ValidationText" Grid.Row="3" Foreground="Red" Margin="0,8,0,0" HorizontalAlignment="Center" MaxWidth="720"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" MaxWidth="720" Margin="0,8,0,0">
            <Button x:Name="RegisterButton" Content="Submit" Width="120" Margin="6"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="110" Margin="6" Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</Window>