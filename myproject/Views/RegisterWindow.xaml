<Window x:Class="MyProject.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="360" Width="440">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Username" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="UsernameInput" Grid.Row="0" Grid.Column="1" Margin="6,4"/>

        <TextBlock Text="Password" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <!-- Password input with strength meter -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="6,4" Orientation="Vertical">
            <PasswordBox x:Name="PasswordInput" Margin="0,0,0,4"/>
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="StrengthLabel" Text="Password strength: " Foreground="Gray"/>
                <ProgressBar x:Name="StrengthBar" Height="8" Minimum="0" Maximum="100" Value="0"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Confirm Password" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <PasswordBox x:Name="ConfirmPasswordInput" Grid.Row="2" Grid.Column="1" Margin="6,4"/>

        <TextBlock Text="Role" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox x:Name="RoleCombo" Grid.Row="3" Grid.Column="1" Margin="6,4" Width="180">
            <ComboBoxItem Content="Patient" IsSelected="True"/>
            <ComboBoxItem Content="Clinician"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>
        <TextBlock x:Name="RoleWarning" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Foreground="DarkOrange" Visibility="Collapsed" Text="Admin approval required for Clinician/Admin."/>

        <TextBlock x:Name="ValidationText" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Foreground="Red" Margin="0,8,0,0"/>

        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RegisterButton" Content="Submit" Width="80" Margin="6"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Margin="6"/>
        </StackPanel>
    </Grid>
</Window>